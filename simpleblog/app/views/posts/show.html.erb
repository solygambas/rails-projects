<h1 class="my-4"><%= @post.title %></h1>
<p><%= @post.body %></p>
<hr>
<div class="container">
<div class="row row-cols-auto">
    <div class="col">
      <%= link_to "Edit", edit_post_path(@post), class: 'btn btn-secondary mb-2' %>
    </div>
    <div class="col">
      <%= button_to "Delete", post_path(@post), method: :delete, form: { data: { turbo_confirm: 'Are you sure?' } }, class: 'btn btn-danger' %>
    </div>
</div>
</div>
<hr>
<%= render 'comments/comments' %>
<%= render 'comments/new' %>

